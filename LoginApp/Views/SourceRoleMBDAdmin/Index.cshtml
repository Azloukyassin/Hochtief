@model IEnumerable<LoginApp.MDBSourceRole>

@{
    ViewBag.Title = "Index";
}

<h2>Alle Einträge </h2>

<p>
    @Html.ActionLink("Neue Eintrag hinzufügen", "Create", "SourceRoleMBDAdmin")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Source_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.En_Role)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.De_Role)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Source_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.En_Role)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.De_Role)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
       
        <td>
            @Html.ActionLink("Update", "Update", new { id=item.Source_id }) |
        
            @Html.ActionLink("Delete", "Delete", new {  id=item.Source_id  })
        </td>
    </tr>
}

</table>
