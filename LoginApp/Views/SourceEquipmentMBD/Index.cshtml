@model IEnumerable<LoginApp.MDBSourceEquipment>

@{
    ViewBag.Title = "List";
}

<h2>Alle Einträge </h2>

<p>
    @Html.ActionLink("Neue Eintrag hinzufügen", "AddOrEdit", "SourceEquipmentMBD")
</p>

<form method="get" asp-action="Index">
    <p>
        <input type="search" placeholder="Suchen..." value="@ViewData["Getdetais"]" name="searchString" style="width:500px;" />
        <input type="submit" value="Search" class="btn btn-primary" />
        <a asp-controller="SourceEquipmentMBD" asp-action="Index">Get All Info </a>

    </p>

</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SourceEquipment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.En_Equipment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.De_Equipment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodeCompany)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SourceEquipment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.En_Equipment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.De_Equipment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodeCompany)
            </td>
        </tr>
    }

</table>
